<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1E1E24"
                tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>

    <EditText
        android:id="@+id/login_username_editText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_imageView"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_register_edittext_background"
        android:hint="@string/login_username_hint"
        android:textColorHint="@color/primaryHintText"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="@color/primaryText"/>

    <EditText
        android:id="@+id/login_password_editText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_username_editText"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_register_edittext_background"
        android:hint="@string/login_password_hint"
        android:textColorHint="@color/primaryHintText"
        android:inputType="textPassword"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="@color/primaryText"/>

    <Button
        android:id="@+id/login_login_button"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_below="@id/login_password_editText"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_register_button"
        android:text="@string/login_login_button_text"/>

</RelativeLayout>
