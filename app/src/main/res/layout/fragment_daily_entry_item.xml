<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="88dp"
	card_view:cardCornerRadius="2dp"
	card_view:cardUseCompatPadding="true">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#fff"
		android:orientation="horizontal"
		android:paddingEnd="16dp"
		android:paddingStart="16dp">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:orientation="vertical">

			<TextView
				android:id="@+id/daily_entry_item_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="4dp"
				android:text="This is the job I did"
				android:textColor="@color/primaryText"
				android:textSize="18sp"/>

			<TextView
				android:id="@+id/daily_entry_item_sub_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="4dp"
				android:text="This is some subtext/job for the work I did"
				android:textColor="@color/secondaryText"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">


				<TextView
					android:id="@+id/daily_entry_item_start_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="08:00 AM"
					android:textColor="@color/secondaryText"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=" - "
					android:textColor="@color/secondaryText"/>

				<TextView
					android:id="@+id/daily_entry_item_finish_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="05:00 PM"
					android:textColor="@color/secondaryText"/>

			</LinearLayout>

		</LinearLayout>

		<TextView
			android:id="@+id/daily_entry_item_total_hours"
			android:layout_width="0dp"
			android:layout_height="30dp"
			android:layout_marginTop="24dp"
			android:layout_weight="1"
			android:gravity="end|center_vertical"
			android:text="2.5"
			android:textColor="@color/primaryText"
			android:textSize="20sp"/>


	</LinearLayout>

</android.support.v7.widget.CardView>
