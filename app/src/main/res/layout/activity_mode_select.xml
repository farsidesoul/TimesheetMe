<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="@dimen/activity_all_padding"
	android:weightSum="1">

	<android.support.v7.widget.CardView
		android:id="@+id/card_simple_mode"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.5">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/primaryColor"
			android:gravity="center">

			<TextView
				android:id="@+id/text_simple_mode"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_above="@+id/text_simple_spiel"
				android:fontFamily="sans-serif-condensed"
				android:text="Simple Mode"
				android:textColor="@color/lightTextColor"
				android:textSize="30sp"/>

			<TextView
				android:id="@+id/text_simple_spiel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:fontFamily="sans-serif-condensed"
				android:gravity="center"
				android:padding="20dp"
				android:text="Use this mode if you work at the same job and don't need to record individual tasks."
				android:textColor="@color/lightTextColor"
				android:textSize="16sp"/>


		</RelativeLayout>


		</android.support.v7.widget.CardView>



	<View
		android:layout_width="match_parent"
		android:layout_height="5dp"
		/>

	<android.support.v7.widget.CardView
		android:id="@+id/card_advanced_mode"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.5">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/accentColor"
			android:gravity="center">

			<TextView
				android:id="@+id/text_advanced_mode"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:text="Advanced Mode"

				android:fontFamily="sans-serif-condensed"
				android:textColor="@color/lightTextColor"
				android:textSize="30sp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/text_advanced_mode"
				android:fontFamily="sans-serif-condensed"
				android:gravity="center"
				android:padding="20dp"
				android:text="Use this mode if you need to track different jobs and the tasks you do for them."
				android:textColor="@color/lightTextColor"
				android:textSize="16sp"/>


		</RelativeLayout>

		</android.support.v7.widget.CardView>

</LinearLayout>
