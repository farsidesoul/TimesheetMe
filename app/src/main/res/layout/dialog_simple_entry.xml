<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="@dimen/standard_card_padding"
		android:animateLayoutChanges="true">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Enter a start time:"
			android:textColor="@color/primaryText"/>

		<TextView
			android:id="@+id/text_start_time"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:gravity="center_vertical"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#888"
			android:layout_marginBottom="10dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Enter a finish time:"
			android:textColor="@color/primaryText"/>

		<TextView
			android:id="@+id/text_finish_time"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:gravity="center_vertical"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#888"
			android:layout_marginBottom="10dp"/>

		<CheckBox
			android:id="@+id/checkbox_break"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Took a break?"
			android:layout_gravity="end"
			android:textColor="@color/primaryText"
			android:buttonTint="#555"/>

		<TextView
			android:id="@+id/text_break_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Enter a break (minutes):"
			android:visibility="gone"
			android:textColor="@color/primaryText"/>

		<EditText
			android:id="@+id/edit_break"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:inputType="number"
			android:visibility="gone"
			android:hint="Break time (minutes)"
			android:textSize="12sp"
			android:textColor="@color/secondaryText"
			android:textColorHint="@color/secondaryText"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="end"
			android:paddingTop="24dp">

			<TextView
				android:id="@+id/text_cancel"
				android:layout_width="@dimen/minimum_text_button_width"
				android:layout_height="@dimen/minimum_text_button_height"
				android:text="Cancel"
				android:gravity="center"
				android:layout_marginEnd="8dp"
				android:textColor="@color/accentColor"/>

			<TextView
				android:id="@+id/text_add"
				android:layout_width="@dimen/minimum_text_button_width"
				android:layout_height="@dimen/minimum_text_button_height"
				android:text="Add"
				android:gravity="center"
				android:textColor="@color/accentColor"/>

		</LinearLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>